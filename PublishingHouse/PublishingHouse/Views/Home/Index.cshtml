@model IEnumerable<PublishingHouse.BLL.DTOs.BookPreviewDto>

<div class="container">
    <div class="row padding">
        @foreach (var book in Model)
        {
            <div class="col-md-3 padding">
                <div class="card">
                    <div class="card-header">
                        <a href=#><img src=@book.ImageUrl class="card-img-top" asp-append-version="true" /></a>                        
                    </div>
                    <div class="card-body">
                        <h4 class="card-title"><a href=# class="active">@book.Title</a></h4>
                        <p class="card-text">@book.Price</p>
                        <button class="btn detal" data-toggle="modal" data-target="#gavel">
                            Детальніше
                        </button>
                    </div>
                </div>                
            </div>
        }
        </div>
</div>
