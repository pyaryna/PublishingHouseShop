@model IEnumerable<AuthorDto>


    <div class="handler padding">
        <ul class="list-inline">
            <li class="list-inline-item handler-item">
                <a asp-controller="Admin" asp-action="Books" class="btn">Книги</a>
            </li>
            <li class="list-inline-item handler-item">
                <a asp-controller="Admin" asp-action="Authors" class="btn">Автори</a>
            </li>
            <li class="list-inline-item handler-item">
                <a asp-controller="Admin" asp-action="Categories" class="btn">Категорії</a>
            </li>
            <li class="list-inline-item handler-item">
                <a asp-controller="Admin" asp-action="Customers" class="btn">Покупці</a>
            </li>
        </ul>
    </div>
<div>
    <h1>Автори</h1>
    <a class="btn btn-danger mb-3" asp-action="Create"
       asp-controller="Author">Додати нового автора</a>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Автор</th>
                    <th scope="col">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <th>@author.Id</th>
                        <td>@author.Name</td>
                        <td>
                            <form asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" method="post">
                                <button type="submit" class="btn btn-danger m-1"
                                        onclick="return confirm('Ви впевнені, що хочете видалити автора: @author.Name?')">
                                    Видалити
                                </button>

                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <p>У Вас поки немає авторів.</p>
    }
</div>